{
  "name": "calendar-app",
  "productName": "calendar-app",
  "description": "calendar-app 日程提醒",
  "keywords": [],
  "main": "./main.js",
  "version": "1.0.0",
  "author": "ericz",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.zhouzk.calendarapp",
    "productName": "calendar-app",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "build/icons/**",
      "package.json",
      "index.html",
      "main.js",
      "preload.js",
      "renderer.js",
      "styles.css"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icons/Martz90-Circle-Calendar.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icons/Martz90-Circle-Calendar.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons"
    }
  },
  "dependencies": {
    "electron-store": "^10.0.0",
    "googleapis": "^144.0.0",
    "node-schedule": "^2.1.1"
  },
  "devDependencies": {
    "electron": "30.0.1",
    "electron-builder": "^25.0.5"
  }
}